<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <TemplateURL>https://raw.githubusercontent.com/roeermose/docker-templates/master/roeermose/mailserver.xml</TemplateURL>
  <Beta>True</Beta>
  <Category>Network:Web</Category>
  <Name>docker-mailserver</Name>
  <Description>
    [b]Description[/b][br]
    A fullstack but simple mail server (SMTP, IMAP, LDAP, Antispam, Antivirus, etc.). Only configuration files, no SQL database. Keep it simple and versioned. Easy to deploy and upgrade.[br][br]
    [b]Configuration[/b][br]
    [b]/config[/b] This is where the application will store its configuration files, database and logs etc.[br]    
    [b]Documentation[/b][br]
    https://github.com/docker-mailserver/docker-mailserver[br][br]
  </Description>
  <Overview>
    A fullstack but simple mail server (SMTP, IMAP, LDAP, Antispam, Antivirus, etc.). Only configuration files, no SQL database. Keep it simple and versioned. Easy to deploy and upgrade.[br][br]
  </Overview>
  <Support>https://forums.unraid.net/topic/103190-support-binhex-airsonic-advanced/</Support>
  <Registry>https://hub.docker.com/r/mailserver/docker-mailserver/</Registry>
  <GitHub>https://github.com/docker-mailserver/docker-mailserver</GitHub>
  <Repository>mailserver/docker-mailserver:lastest</Repository>
  <Project>https://github.com/docker-mailserver/docker-mailserver</Project>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>25</HostPort>
        <ContainerPort>25</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>143</HostPort>
        <ContainerPort>143</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>587</HostPort>
        <ContainerPort>587</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>993</HostPort>
        <ContainerPort>993</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>ENABLE_SPAMASSASSIN</Name>
      <Value>1</Value>
    </Variable>
    <Variable>
      <Name>SPAMASSASSIN_SPAM_TO_INBOX</Name>
      <Value>1</Value>
    </Variable>
    <Variable>
      <Name>ENABLE_CLAMAV</Name>
      <Value>1</Value>
    </Variable>
    <Variable>
      <Name>ENABLE_FAIL2BAN</Name>
      <Value>1</Value>
    </Variable>
    <Variable>
      <Name>ENABLE_POSTGREY</Name>
      <Value>1</Value>
    </Variable>
    <Variable>
      <Name>ENABLE_SASLAUTHD</Name>
      <Value>0</Value>
    </Variable>
    <Variable>
      <Name>ONE_DIR</Name>
      <Value>1</Value>
    </Variable>
    <Variable>
      <Name>DMS_DEBUG</Name>
      <Value>0</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/docker-mailserver/data/mail-data</HostDir>
      <ContainerDir>/var/mail</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/docker-mailserver/data/mail-state</HostDir>
      <ContainerDir>/var/mail-state</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/docker-mailserver/data/mail-logs</HostDir>
      <ContainerDir>/var/log/mail</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/docker-mailserver/config</HostDir>
      <ContainerDir>/tmp/docker-mailserver</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/etc/localtime</HostDir>
      <ContainerDir>/etc/localtime</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <WebUI></WebUI>
  <Icon>https://raw.githubusercontent.com/binhex/docker-templates/master/binhex/images/airsonic-advanced-icon.png</Icon>
  <DonateText>If you appreciate my work, then please consider buying me a beer :D</DonateText>
  <DonateLink>https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&amp;hosted_button_id=MM5E27UX6AUU4</DonateLink>
  <DonateImg>https://www.paypal.com/en_US/i/btn/btn_donate_SM.gif</DonateImg>
  <ExtraParams>--domainname [domainname] --hostname mail --cap-add NET_ADMIN--cap-add SYS_PTRACE</ExtraParams>
</Containers>
